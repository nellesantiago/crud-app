<div class="container">
    <div class="nav">
        <div class="title">DearDiary</div>
        <%= link_to "Create New Entry", entries_new_path %>
    </div>
    <div class="body">
        <% @entries.each do |entry| %>
            <div class="box" style="background: url('<%= image_url "sticky.png"%>'); background-size: 400px 300px">
            <span class="title"><%= entry.title %></span>
            <div class="options">
            <%= link_to "Read", entry %>
            <%= link_to "Edit", edit_path(entry) %>
            <%= link_to "Delete", entry, method: :delete, data: {confirm: "Are you sure you want to delete this entry? This can't be undone."}%></div>
            </div>
        <% end %>
    </div>
</div>